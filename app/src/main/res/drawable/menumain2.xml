<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="#B12626" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#B5FFEBEE" /> <!-- خلفية حمراء -->
            <corners android:radius="11dp" /> <!-- جوانب مائلة -->
            <stroke
                android:width="0.99dp"
                android:color="@color/black" /> <!-- لون الخط أسود -->
        </shape>

    </item>

</selector>