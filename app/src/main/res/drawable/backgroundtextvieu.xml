<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="855dp" />
            <solid android:color="#B12626" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#F8D9D9" /> <!-- خلفية حمراء -->
            <corners android:radius="15dp" /> <!-- جوانب مائلة -->
            <stroke
                android:width="2dp"
                android:color="@color/black" /> <!-- لون الخط أسود -->
        </shape>

    </item>

</selector>